{% extends 'home.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            background-image: url('https://img.freepik.com/vecteurs-libre/fond-abstrait-blanc_23-2148806275.jpg?w=826&t=st=1714928056~exp=1714928656~hmac=6cdabea0fb78f93f7a95ff3877cfad760fbe73bdce5539503a360c6605d04168');
