{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4" style="color: black">Ajouter un nouveau médicament</h1>

                        {# Début du formulaire #}
                        {{ form_start(form) }}

                        {# Affichage des champs du formulaire #}
                        <div class="form-group">
                            {{ form_label(form.dosage, 'Dosage') }}
                            {{ form_widget(form.dosage, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.form, 'Form') }}
                            {{ form_widget(form.form, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        {# Bouton de soumission du formulaire #}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>

                        {# Fin du formulaire #}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
